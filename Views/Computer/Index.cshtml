@model IEnumerable<MvcLabManager.Models.Computer>

@{
    ViewData["Title"] = "Computadores";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum computador cadastrado.</p>
}
else
{
    <table class="table">
        <thead> 
            <tr> 
                <th>Id</th>
                <th>RAM</th>
                <th>Processador</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var computer in Model)
            {
                <tr>
                    <td>@computer.Id</td>
                    <td>@computer.Ram</td>
                    <td>@computer.Processor</td>
                    <td> 
                        <a class="btn btn-primary btn-sm" asp-controller="Computer" asp-action="Show" asp-route-id="@computer.Id">Ver</a>
                        <a class="btn btn-secondary btn-sm" asp-controller="Computer" asp-action="Update" asp-route-id="@computer.Id">Editar</a>
                        <a class="btn btn-danger  btn-sm" asp-controller="Computer" asp-action="Delete" asp-route-id="@computer.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}